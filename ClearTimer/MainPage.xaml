<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearTimer.MainPage"
             Title=""
             BackgroundColor="LightBlue">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="0,10">
            <Grid Grid.Column="0"
                  ColumnDefinitions="Auto,*,Auto"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  Margin="0,0,10,0">
                <Grid.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="OnModePanUpdated"/>
                </Grid.GestureRecognizers>

                <Label x:Name="LeftArrowLabel"
                       Text="◀"
                       FontSize="26"
                       TextColor="#03DAC5"
                       VerticalOptions="Center"
                       Grid.Column="0"
                       IsVisible="False"
                       Margin="0,0,10,0"/>

                <Label x:Name="ModeLabel"
                       Text="TIMER"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Grid.Column="1"/>

                <Label x:Name="RightArrowLabel"
                       Text="▶"
                       FontSize="26"
                       TextColor="#03DAC5"
                       VerticalOptions="Center"
                       Grid.Column="2"
                       IsVisible="False"
                       Margin="10,0,0,0"/>
            </Grid>

            <ImageButton Source="dotnet_bot.png"
                         WidthRequest="32"
                         HeightRequest="32"
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Clicked="OnSettingsClicked"
                         Grid.Column="1"/>
        </Grid>

        <VerticalStackLayout Grid.Row="1" Spacing="50" VerticalOptions="Center" Margin="0,-30,0,-30">
            <VerticalStackLayout Spacing="30" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">

                <Grid HeightRequest="60">
                    <Label x:Name="RepeatLabel"
                           Text="0"
                           FontSize="48"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="False"/>

                    <Button x:Name="SetTimeButton"
                            Text="Set break"
                            BackgroundColor="#03DAC5"
                            TextColor="Black"
                            FontSize="20"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            CornerRadius="30"
                            WidthRequest="180"
                            HeightRequest="60"
                            IsVisible="False"
                            Clicked="OnSetTimeClicked" />
                </Grid>

                <Grid x:Name="TimerContainer"
                      HeightRequest="300"
                      WidthRequest="300"
                      HorizontalOptions="Center"
                      VerticalOptions="Center">

                    <Grid.GestureRecognizers>
                        <PanGestureRecognizer PanUpdated="OnTimerPanUpdated"/>
                    </Grid.GestureRecognizers>

                    <Ellipse Stroke="#03DAC5"
                             StrokeThickness="20"
                             Fill="#1E1E1E"/>

                    <Label x:Name="TimerLabel"
                           Text="00:00"
                           FontSize="48"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>

            </VerticalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="40" Padding="0,20">
                <ImageButton x:Name="StartButton"
                             Source="play_arrow.png"
                             WidthRequest="70"
                             HeightRequest="70"
                             BackgroundColor="Transparent"
                             Clicked="OnStartClicked"/>
                <ImageButton x:Name="PauseButton"
                             Source="dotnet_bot.png"
                             WidthRequest="70"
                             HeightRequest="70"
                             BackgroundColor="Transparent"
                             IsVisible="False"
                             Clicked="OnPauseClicked"/>
                <ImageButton x:Name="StopButton"
                             Source="dotnet_bot.png"
                             WidthRequest="70"
                             HeightRequest="70"
                             BackgroundColor="Transparent"
                             IsVisible="False"
                             Clicked="OnResetClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>